<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.musicdetail.view.MusicDetailFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBackPressed"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreOptions"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <carbon.widget.ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/avicii"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/containerControls"
        app:layout_constraintTop_toBottomOf="@id/btnBackPressed"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.slider.Slider
                android:id="@+id/sliderProgressMusic"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:valueFrom="0.0"
                android:valueTo="100.0"
                app:thumbColor="@color/white"
                app:thumbElevation="6dp"
                app:thumbRadius="5dp"
                tools:value="30"
                app:trackHeight="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvAuthorMusic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitleMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Surrender - Acoustic"
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvAuthorMusic"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAuthorMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cash Cash"
                android:layout_marginStart="10dp"
                android:textColor="#8C8C8C"
                tools:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/sliderProgressMusic"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:layout_marginEnd="10dp"
                app:lottie_repeatCount="0"
                app:lottie_rawRes="@raw/favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitleMusic"
                app:layout_constraintBottom_toBottomOf="@id/tvAuthorMusic"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/random"
                tools:background="@color/black"
                app:layout_constraintStart_toStartOf="@id/tvAuthorMusic"
                app:layout_constraintTop_toBottomOf="@id/sliderProgressMusic"
                app:layout_constraintTop_toTopOf="@id/ivLoop"
                app:layout_constraintBottom_toBottomOf="@id/ivLoop"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavPlayPause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:lottie_rawRes="@raw/play_pause"
                app:layout_constraintTop_toBottomOf="@id/sliderProgressMusic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backMusic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                tools:background="@color/black"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="@id/lavPlayPause"
                app:layout_constraintBottom_toBottomOf="@id/lavPlayPause"
                app:layout_constraintEnd_toStartOf="@id/lavPlayPause"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/nextMusic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                tools:background="@color/black"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@id/lavPlayPause"
                app:layout_constraintTop_toTopOf="@id/lavPlayPause"
                app:layout_constraintBottom_toBottomOf="@id/lavPlayPause"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLoop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_loop_24"
                tools:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/lavFavorite"
                app:layout_constraintTop_toTopOf="@id/lavPlayPause"
                app:layout_constraintBottom_toBottomOf="@id/lavPlayPause"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>